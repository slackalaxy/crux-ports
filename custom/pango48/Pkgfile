# Description: A library for layout and rendering of text
# URL: https://www.gtk.org/
# Maintainer: Petar petrov, slackalaxy at gmail dot com
# Depends on: fribidi gobject-introspection harfbuzz xorg-libsm xorg-libxft

name=pango48
version=1.48.10
release=1
source=(http://download.gnome.org/sources/pango/${version:0:4}/pango-$version.tar.xz)

build() {
	meson build pango-$version \
		--prefix=/usr \
		--libdir=/usr/lib/$name \
		--includedir=/usr/include/$name \
		--buildtype=plain \
		--wrap-mode nodownload \
		-D b_lto=true \
		-D b_pie=true
	meson compile -C build -j ${JOBS:-1}
	DESTDIR=$PKG meson install -C build
	
	rm -rf $PKG/usr/{bin,share}
}
