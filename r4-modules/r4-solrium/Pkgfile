# Description: R module solrium
# URL: https://cran.r-project.org/web/packages/solrium
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r r4-crul r4-dplyr r4-jsonlite r4-plyr r4-r6 r4-tibble r4-xml2
# Optional: r4-knitr r4-rmarkdown r4-testthat

name=r4-solrium
version=1.2.0
release=1
source=(https://cloud.r-project.org/src/contrib/solrium_${version}.tar.gz)

build() {
	cd solrium
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
