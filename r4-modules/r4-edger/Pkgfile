# Optional: r4-annotationdbi r4-arrow r4-biobase r4-biocstyle r4-jsonlite r4-knitr r4-matrix r4-org-hs-eg-db r4-readr r4-rhdf5 r4-seuratobject r4-summarizedexperiment

name=r4-edger
version=4.8.0
release=1
source=(https://bioconductor.org/packages/3.22/bioc/src/contrib/edgeR_${version}.tar.gz)

build() {
	cd edgeR
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
