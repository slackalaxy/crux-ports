# Description: R module rncl
# URL: https://cran.r-project.org/web/packages/rncl
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r r4-progress r4-rcpp
# Optional: r4-ape r4-testthat

name=r4-rncl
version=0.8.7
release=1
source=(https://cloud.r-project.org/src/contrib/rncl_${version}.tar.gz)

build() {
	cd rncl
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
