# Optional: r4-askpass r4-bench r4-clipr r4-covr r4-docopt r4-httpuv r4-jose r4-jsonlite r4-knitr r4-later r4-paws-common r4-promises r4-rmarkdown r4-testthat r4-tibble r4-webfakes r4-xml2

name=r4-httr2
version=1.0.6
release=1
source=(https://cloud.r-project.org/src/contrib/httr2_${version}.tar.gz)

build() {
	cd httr2
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
