# Description: R module rstudioapi
# URL: https://cran.r-project.org/web/packages/rstudioapi
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r 
# Optional: r4-clipr r4-covr r4-curl r4-jsonlite r4-knitr r4-rmarkdown r4-testthat r4-withr

name=r4-rstudioapi
version=0.18.0
release=1
source=(https://cloud.r-project.org/src/contrib/rstudioapi_${version}.tar.gz)

build() {
	cd rstudioapi
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
