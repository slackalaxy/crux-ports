name=r4-promises
version=1.5.0
release=1
source=(https://cloud.r-project.org/src/contrib/promises_${version}.tar.gz)

build() {
	cd promises
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
