name=r4-bsgenome
version=1.72.0
release=1
source=(https://bioconductor.org/packages/3.19/bioc/src/contrib/BSgenome_${version}.tar.gz)

build() {
	cd BSgenome
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
