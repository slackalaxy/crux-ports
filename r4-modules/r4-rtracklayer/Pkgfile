name=r4-rtracklayer
version=1.64.0
release=1
source=(https://bioconductor.org/packages/3.19/bioc/src/contrib/rtracklayer_${version}.tar.gz)

build() {
	cd rtracklayer
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
