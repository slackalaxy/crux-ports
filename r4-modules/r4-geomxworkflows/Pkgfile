name=r4-geomxworkflows
version=1.14.0
release=1
source=(https://bioconductor.org/packages/3.21/workflows/src/contrib/GeoMxWorkflows_${version}.tar.gz)

build() {
	cd GeoMxWorkflows
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
