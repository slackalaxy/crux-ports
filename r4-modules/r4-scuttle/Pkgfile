name=r4-scuttle
version=1.14.0
release=1
source=(https://bioconductor.org/packages/3.19/bioc/src/contrib/scuttle_${version}.tar.gz)

build() {
	cd scuttle
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
