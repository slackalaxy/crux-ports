name=r4-geomxtools
version=3.12.0
release=1
source=(https://bioconductor.org/packages/3.21/bioc/src/contrib/GeomxTools_${version}.tar.gz)

build() {
	cd GeomxTools
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
