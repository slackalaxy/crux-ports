# Description: R module snowflakeauth
# URL: https://cran.r-project.org/web/packages/snowflakeauth
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r r4-cli r4-curl r4-jsonlite r4-rcpptoml r4-rlang
# Optional: r4-jose r4-openssl r4-testthat r4-withr

name=r4-snowflakeauth
version=0.1.2
release=1
source=(https://cloud.r-project.org/src/contrib/snowflakeauth_${version}.tar.gz)

build() {
	cd snowflakeauth
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
