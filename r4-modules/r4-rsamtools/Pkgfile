# Optional: r4-biocstyle r4-bsgenome-hsapiens-ucsc-hg19 r4-genomicalignments r4-genomicfeatures r4-knitr r4-rnaseqdata-hnrnpc-bam-chr14 r4-runit r4-shortread r4-txdb-dmelanogaster-ucsc-dm3-ensgene r4-txdb-hsapiens-ucsc-hg18-knowngene r4-variantannotation

name=r4-rsamtools
version=2.24.1
release=1
source=(https://bioconductor.org/packages/3.21/bioc/src/contrib/Rsamtools_${version}.tar.gz)

build() {
	cd Rsamtools
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
