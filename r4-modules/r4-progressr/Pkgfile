# Description: R module progressr
# URL: https://cran.r-project.org/web/packages/progressr
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r r4-digest
# Optional: r4-base64enc r4-beepr r4-cli r4-commonmark r4-crayon r4-dofuture r4-foreach r4-furrr r4-future r4-future-apply r4-pbmcapply r4-plyr r4-progress r4-purrr r4-rpushbullet r4-rstudioapi r4-shiny

name=r4-progressr
version=0.14.0
release=1
source=(https://cloud.r-project.org/src/contrib/progressr_${version}.tar.gz)

build() {
	cd progressr
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
