name=r4-devtools
version=2.4.6
release=1
source=(https://cloud.r-project.org/src/contrib/devtools_${version}.tar.gz)

build() {
	cd devtools
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
