# Depends on: r r4-assertthat
# Optional: r4-covr r4-knitr r4-microbenchmark r4-rmarkdown r4-testthat

name=r4-ratelimitr
version=0.4.1
release=1
source=(https://cloud.r-project.org/src/contrib/ratelimitr_${version}.tar.gz)

build() {
	cd ratelimitr
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
