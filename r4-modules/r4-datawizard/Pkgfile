name=r4-datawizard
version=1.0.0
release=1
source=(https://cloud.r-project.org/src/contrib/datawizard_${version}.tar.gz)

build() {
	cd datawizard
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
