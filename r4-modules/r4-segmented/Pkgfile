name=r4-segmented
version=2.0.3
release=1
source=(https://cloud.r-project.org/src/contrib/segmented_2.0-3.tar.gz)

build() {
	cd segmented
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
