# Optional: r4-covr r4-dplyr r4-ggplot2movies r4-hexbin r4-hmisc r4-knitr r4-lattice r4-mapproj r4-maps r4-multcomp r4-munsell r4-nlme r4-profvis r4-quantreg r4-ragg r4-rcolorbrewer r4-rmarkdown r4-rpart r4-sf r4-svglite r4-testthat r4-vdiffr r4-xml2

name=r4-ggplot2
version=3.4.4
release=1
source=(https://cloud.r-project.org/src/contrib/ggplot2_${version}.tar.gz)

build() {
	cd ggplot2
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
