name=r4-biocparallel
version=1.38.0
release=1
source=(https://bioconductor.org/packages/3.19/bioc/src/contrib/BiocParallel_${version}.tar.gz)

build() {
	cd BiocParallel
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
