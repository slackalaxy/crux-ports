# Description: R module phylocanvas
# URL: https://cran.r-project.org/web/packages/phylocanvas
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r r4-ape r4-htmlwidgets r4-phylobase
# Optional: r4-knitr r4-magrittr r4-rmarkdown

name=r4-phylocanvas
version=0.1.3
release=1
source=(https://cloud.r-project.org/src/contrib/phylocanvas_${version}.tar.gz)

build() {
	cd phylocanvas
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
