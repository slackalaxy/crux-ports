# Description: R module S7
# URL: https://cran.r-project.org/web/packages/S7
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r 
# Optional: r4-bench r4-callr r4-covr r4-knitr r4-rmarkdown r4-testthat r4-tibble

name=r4-s7
version=0.2.0
release=1
source=(https://cloud.r-project.org/src/contrib/S7_${version}.tar.gz)

build() {
	cd S7
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
