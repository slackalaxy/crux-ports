# Description: R module bsicons
# URL: https://cran.r-project.org/web/packages/bsicons
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r r4-cli r4-htmltools r4-rlang
# Optional: r4-bslib r4-processx r4-testthat r4-webshot2 r4-withr

name=r4-bsicons
version=0.1.2
release=1
source=(https://cloud.r-project.org/src/contrib/bsicons_${version}.tar.gz)

build() {
	cd bsicons
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
