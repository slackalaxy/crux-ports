name=r4-xfun
version=0.42
release=1
source=(https://cloud.r-project.org/src/contrib/xfun_${version}.tar.gz)

build() {
	cd xfun
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
