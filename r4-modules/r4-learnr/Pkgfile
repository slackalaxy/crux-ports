release=1
source=(https://cloud.r-project.org/src/contrib/learnr_${version}.tar.gz)

build() {
	cd learnr
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
