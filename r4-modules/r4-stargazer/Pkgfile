# Description: R module stargazer
# URL: https://cran.r-project.org/web/packages/stargazer
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r 
# Optional: 

name=r4-stargazer
version=5.2.3
release=1
source=(https://cloud.r-project.org/src/contrib/stargazer_${version}.tar.gz)

build() {
	cd stargazer
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
