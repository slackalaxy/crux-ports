name=r4-mlr
version=2.19.1
release=1
source=(https://cloud.r-project.org/src/contrib/mlr_${version}.tar.gz)

build() {
	cd mlr
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
