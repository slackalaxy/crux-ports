name=r4-recipes
version=1.0.10
release=1
source=(https://cloud.r-project.org/src/contrib/recipes_${version}.tar.gz)

build() {
	cd recipes
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
