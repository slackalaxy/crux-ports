release=1
source=(https://cloud.r-project.org/src/contrib/prodlim_${version}.tar.gz)

build() {
	cd prodlim
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
