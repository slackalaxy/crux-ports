name=r4-wikidataqueryservicer
version=1.0.0
release=1
source=(https://cloud.r-project.org/src/contrib/WikidataQueryServiceR_${version}.tar.gz)

build() {
	cd WikidataQueryServiceR
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
