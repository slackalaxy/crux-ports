name=r4-delayedarray
version=0.36.0
release=1
source=(https://bioconductor.org/packages/3.22/bioc/src/contrib/DelayedArray_${version}.tar.gz)

build() {
	cd DelayedArray
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
