name=r4-glmnet
version=4.1.9
release=1
source=(https://cloud.r-project.org/src/contrib/glmnet_4.1-9.tar.gz)

build() {
	cd glmnet
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
