# Depends on: r r4-cli r4-glue r4-httr r4-lifecycle r4-magrittr r4-rlang r4-selectr r4-tibble r4-xml2
# Optional: r4-chromote r4-covr r4-knitr r4-purrr r4-r6 r4-readr r4-repurrrsive r4-rmarkdown r4-spelling r4-stringi r4-testthat r4-tidyr r4-webfakes

name=r4-rvest
version=1.0.5
release=1
source=(https://cloud.r-project.org/src/contrib/rvest_${version}.tar.gz)

build() {
	cd rvest
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
