name=r4-vroom
version=1.6.5
release=1
source=(https://cloud.r-project.org/src/contrib/vroom_${version}.tar.gz)

build() {
	cd vroom
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
