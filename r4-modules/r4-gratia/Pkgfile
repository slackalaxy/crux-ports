name=r4-gratia
version=0.11.2
release=1
source=(https://cloud.r-project.org/src/contrib/gratia_${version}.tar.gz)

build() {
	cd gratia
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
