# Description: R module EnvStats
# URL: https://cran.r-project.org/web/packages/EnvStats
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r r4-ggplot2 r4-mass r4-nortest
# Optional: r4-boot r4-covr r4-hmisc r4-lattice r4-qcc r4-sp r4-tinytest

name=r4-envstats
version=3.1.0
release=1
source=(https://cloud.r-project.org/src/contrib/EnvStats_${version}.tar.gz)

build() {
	cd EnvStats
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
