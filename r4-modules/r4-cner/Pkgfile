name=r4-cner
version=1.40.0
release=1
source=(https://bioconductor.org/packages/3.19/bioc/src/contrib/CNEr_${version}.tar.gz)

build() {
	cd CNEr
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
