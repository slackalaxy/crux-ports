# Description: R module mcprogress
# URL: https://cran.r-project.org/web/packages/mcprogress
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r 
# Optional: r4-knitr r4-rmarkdown r4-rstudioapi

name=r4-mcprogress
version=0.1.1
release=1
source=(https://cloud.r-project.org/src/contrib/mcprogress_${version}.tar.gz)

build() {
	cd mcprogress
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
