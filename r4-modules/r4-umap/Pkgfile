# Description: R module umap
# URL: https://cran.r-project.org/web/packages/umap
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r r4-matrix r4-openssl r4-rcpp r4-reticulate r4-rspectra
# Optional: r4-knitr r4-rmarkdown r4-testthat

name=r4-umap
version=0.2.10.0
release=1
source=(https://cloud.r-project.org/src/contrib/umap_${version}.tar.gz)

build() {
	cd umap
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
