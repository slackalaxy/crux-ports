name=r4-seuratobject
version=5.0.1
release=1
source=(https://cloud.r-project.org/src/contrib/SeuratObject_${version}.tar.gz)

build() {
	cd SeuratObject
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
