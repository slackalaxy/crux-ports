name=r4-tibble
version=3.3.0
release=1
source=(https://cloud.r-project.org/src/contrib/tibble_${version}.tar.gz)

build() {
	cd tibble
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
