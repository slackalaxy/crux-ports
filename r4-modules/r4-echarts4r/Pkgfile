# Optional: r4-covr r4-data-tree r4-data-tree r4-geofacet r4-knitr r4-leaflet r4-leaflet r4-quantmod r4-rmarkdown r4-testthat r4-tibble r4-tidyr r4-withr

name=r4-echarts4r
version=0.5.0
release=1
source=(https://cloud.r-project.org/src/contrib/echarts4r_${version}.tar.gz)

build() {
	cd echarts4r
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
