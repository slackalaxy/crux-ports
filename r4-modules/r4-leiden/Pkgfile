name=r4-leiden
version=0.4.3.1
release=1
source=(https://cran.rstudio.com/src/contrib/leiden_${version}.tar.gz)

build() {
	cd leiden
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
