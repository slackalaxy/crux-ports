name=r4-rgl
version=1.3.12
release=1
source=(https://cloud.r-project.org/src/contrib/rgl_${version}.tar.gz)

build() {
	cd rgl
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
