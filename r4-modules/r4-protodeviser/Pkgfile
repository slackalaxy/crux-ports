name=r4-protodeviser
version=1.0
release=1
source=(https://github.com/izzilab/protodeviser/archive/$version/protodeviser-$version.tar.gz)

build() {
	cd protodeviser-$version
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
