# Description: R module tidydr
# URL: https://cran.r-project.org/web/packages/tidydr
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r r4-cluster r4-ggfun r4-ggplot2 r4-rlang
# Optional: r4-knitr r4-prettydoc r4-rmarkdown r4-singlecellexperiment r4-summarizedexperiment

name=r4-tidydr
version=0.0.6
release=1
source=(https://cloud.r-project.org/src/contrib/tidydr_${version}.tar.gz)

build() {
	cd tidydr
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
