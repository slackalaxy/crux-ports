name=r4-testthat
version=3.3.2
release=1
source=(https://cloud.r-project.org/src/contrib/testthat_${version}.tar.gz)

build() {
	cd testthat
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
