source=(https://cloud.r-project.org/src/contrib/spatstat.explore_3.2-5.tar.gz)

build() {
	cd spatstat.explore
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
