# Description: R module sessioninfo
# URL: https://cran.r-project.org/web/packages/sessioninfo
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r r4-cli
# Optional: r4-callr r4-covr r4-mockery r4-reticulate r4-rmarkdown r4-testthat r4-withr

name=r4-sessioninfo
version=1.2.2
release=1
source=(https://cloud.r-project.org/src/contrib/sessioninfo_${version}.tar.gz)

build() {
	cd sessioninfo
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
