name=r4-scater
version=1.38.0
release=1
source=(https://bioconductor.org/packages/3.22/bioc/src/contrib/scater_${version}.tar.gz)

build() {
	cd scater
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
