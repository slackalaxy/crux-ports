# Description: R module zlibbioc
# URL: https://bioconductor.org/packages/zlibbioc
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: gcc-fortran r
# Optional: r4-biocstyle

name=r4-zlibbioc
version=1.48.0
release=1
source=(https://bioconductor.org/packages/3.18/bioc/src/contrib/zlibbioc_${version}.tar.gz)

build() {
	cd zlibbioc
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
