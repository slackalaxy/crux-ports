name=r4-diagrammer
version=1.0.10
release=1
source=(https://cloud.r-project.org/src/contrib/DiagrammeR_${version}.tar.gz)

build() {
	cd DiagrammeR
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
