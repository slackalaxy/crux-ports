name=r4-plotly
version=4.12.0
release=1
source=(https://cloud.r-project.org/src/contrib/plotly_${version}.tar.gz)

build() {
	cd plotly
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
