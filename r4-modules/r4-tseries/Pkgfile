# Description: R module tseries
# URL: https://cran.r-project.org/web/packages/tseries
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: r r4-jsonlite r4-quadprog r4-quantmod r4-zoo
# Optional: 

name=r4-tseries
version=0.10.59
release=1
source=(https://cloud.r-project.org/src/contrib/tseries_0.10-59.tar.gz)

build() {
	cd tseries
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
