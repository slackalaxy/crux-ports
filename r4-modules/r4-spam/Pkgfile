name=r4-spam
version=2.10.0
release=1
source=(https://cran.rstudio.com/src/contrib/spam_2.10-0.tar.gz)

build() {
	cd spam
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
