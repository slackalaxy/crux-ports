# Optional: r4-airway r4-biocgenerics r4-deseq2 r4-ggrastr r4-gridextra r4-knitr r4-magrittr r4-org-hs-eg-db r4-pasilla r4-rmarkdown r4-runit

name=r4-enhancedvolcano
version=1.28.2
release=1
source=(https://bioconductor.org/packages/3.22/bioc/src/contrib/EnhancedVolcano_${version}.tar.gz)

build() {
	cd EnhancedVolcano
	mkdir -p $PKG/usr/lib/R/library
	R CMD INSTALL . -l $PKG/usr/lib/R/library
}
