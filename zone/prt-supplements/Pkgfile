# Description: Extra tools to check dependencies relations 
# URL: https://github.com/slackalaxy/prt-supplements
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: prt-utils

name=prt-supplements
version=f8d465e
release=1
source=(https://github.com/slackalaxy/depsck/archive/$version/$name-f8d465efb126403db50656c6caf48bfdd0010e2b.tar.gz)

build() {
	cd $name-${version}*
	mkdir -p $PKG/usr/bin
	install -m 0755 finddepsrow $PKG/usr/bin
	install -m 0755 prtskim $PKG/usr/bin
	install -m 0755 missdeps $PKG/usr/bin
	install -m 0755 missdepslist $PKG/usr/bin
	install -m 0755 revlib $PKG/usr/bin
}
