#!/bin/sh
#
# /etc/rc.d/firewalld: start ístop|restart|status firewall
#

case $1 in
start)
	/usr/sbin/firewall
	echo "Firewall started."
	;;
stop)
	iptables --flush
	echo "Firewall stopped."
	;;
restart)
	iptables --flush
	/usr/sbin/firewall
	echo "Firewall restarted."
	;;
status)
	iptables --list-rules
	;;
*)
	echo "usage: $0 [start|stop|restart|status]"
	;;
esac

# End of file
