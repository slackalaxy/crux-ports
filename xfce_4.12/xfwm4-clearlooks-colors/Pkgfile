# Description: GNOME Colors Clearlooks Xfwm4 theme
# URL: https://www.xfce-look.org/p/1016670
# Maintainer: Petar Petrov, slackalaxy at gmail.com
# Depends on: xfwm4

name=xfwm4-clearlooks-colors
version=1.1
release=1
source=(https://dl2.pling.com/api/files/download/j/eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..x_2ZYeOkyVV9wgz-HFDtO1i332_pCZ8mrlunp2ZOK8g/90384-Clearlooks-Xfce-Colors.zip)

build() {
	mkdir -p $PKG/usr/share/themes
	cp -a $SRC/Clearlooks-* $PKG/usr/share/themes
}
