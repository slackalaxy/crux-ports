# Description: GUIDe tree based AligNment ConfidencE
# URL: https://github.com/HaimAshk/GUIDANCE
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: p5-bioperl ruby mafft muscle prank

name=guidance
version=2.02
release=3
source=(https://github.com/HaimAshk/GUIDANCE/archive/refs/tags/guidance.v${version}.tar.gz
	$name.sh)

build() {
	cd GUIDANCE-$name.v${version}
	make
	
	find . -type f -iname '*.pl' -exec chmod 0755 {} \;
	#find . -type f -iname '*.pl' -exec sed -i 's#/usr/bin/perl#/usr/bin/env perl#g' {} \;
	find . -type f -iname 'Makefile' -exec rm -rf {} \;
	find . -type f -iname 'makefile' -exec rm -rf {} \;
	
	mkdir -p $PKG/usr/lib/$name
	rsync -av --exclude='*.o' \
	          --exclude='*.cpp' \
		  --exclude='*.h' \
		  --exclude='*.dep' \
		  --exclude='*.c' \
	. $PKG/usr/lib/$name
	
	install -D -m755 $SRC/$name.sh $PKG/usr/bin/$name
	
	# remove junk
	find $PKG/ -name "README" -delete
	find $PKG/ -name "ChangeLog" -delete
}
