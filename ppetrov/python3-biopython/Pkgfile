# Description: A set of Python tools for biological computation
# URL: https://biopython.org/
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: python3-numpy

name=python3-biopython
version=1.84
release=1
source=(http://biopython.org/DIST/biopython-$version.tar.gz)

build() {
  cd ${name#*-}-$version

  /usr/bin/python3 setup.py build
  /usr/bin/python3 setup.py install \
                   --prefix=/usr    \
                   --root="$PKG"    \
                   --skip-build     \
                   --optimize=1

  find $PKG \( -iname "README*" -o \
               -iname INSTALLER -o \
               -iname REQUESTED -o \
               -iname "LICENSE*"   \) -delete
}
