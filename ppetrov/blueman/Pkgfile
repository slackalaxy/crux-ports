# Description: A GTK+ bluetooth manager
# URL: https://github.com/blueman-project/blueman
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: bluez desktop-file-utils polkit pulseaudio python3-cython python3-gobject

name=blueman
version=2.3.5
release=2
source=(https://github.com/blueman-project/$name/archive/refs/tags/$version.tar.gz)

build() {
	cd $name-$version
	
	sed -e 's/cython/cython3/g' -i configure.ac
	
	NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr \
	--sysconfdir=/etc \
	--with-dhcp-config=/etc/dhcpd/dhcpcd.conf \
	--libexecdir=/usr/lib/blueman \
	--disable-schemas-compile \
	--disable-nls \
	--disable-runtime-deps-check
  
	make
	make DESTDIR=$PKG install
  
	rm -r $PKG/usr/share/doc/
	rm -r $PKG/usr/lib/systemd/
	
	# https://www.linuxquestions.org/questions/linux-hardware-18/br-connection-profile-unavailable-4175720918/#post6406579
	mkdir -p $PKG/etc/pulse/default.pa.d
	echo "load-module module-bluetooth-discover" >> $PKG/etc/pulse/default.pa.d/blueman.pa
}
