# Description: Free Remote Desktop Protocol
# URL: https://github.com/FreeRDP/FreeRDP/
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: icu libjpeg-turbo xorg-libxcursor xorg-libxdamage xorg-libxinerama xorg-libxkbfile xorg-libxrandr xorg-libxtst xorg-libxv

name=freerdp
version=2.11.2
release=1
source=(https://github.com/FreeRDP/FreeRDP/files/12670558/freerdp-$version.tar.gz)

build() {
	cd $name-$version
	mkdir -p build
	cd build

	cmake \
	-D CMAKE_C_FLAGS:STRING="$CFLAGS" \
	-D CMAKE_CXX_FLAGS:STRING="$CXXFLAGS" \
	-D CMAKE_INSTALL_PREFIX=/usr \
	-D CMAKE_INSTALL_LIBDIR=lib \
	-D PROXY_PLUGINDIR=/usr/lib/freerdp2/server/proxy/plugins \
	-D WITH_LIBSYSTEMD=OFF \
	-D WITH_WAYLAND=OFF \
	-D WITH_FFMPEG=OFF \
	-D WITH_LAME=OFF \
	-D WITH_ALSA=OFF \
	-D WITH_PULSE=OFF \
	-D WITH_CUPS=OFF \
	-D WITH_PCSC=OFF \
	-D WITH_SWSCALE=OFF \
	-D WITH_ICU=ON \
	-D WITH_JPEG=ON \
	-D WITH_SERVER=ON \
	-D WITH_CHANNELS=ON \
	-D WITH_CLIENT_CHANNELS=ON \
	-D WITH_SERVER_CHANNELS=ON \
	-D CHANNEL_URBDRC_CLIENT=ON \
	-D CMAKE_BUILD_TYPE=Release ..
	
	make
	make install DESTDIR=$PKG
}
