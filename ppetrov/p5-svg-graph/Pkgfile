# Description:	SVG::Graph
# URL:		http://search.cpan.org/~allenday/SVG-Graph/
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on:	p5-math-derivative p5-math-spline p5-statistics-descriptive p5-svg p5-tree-dag_node

name=p5-svg-graph
version=0.02
release=1
source=(http://search.cpan.org/CPAN/authors/id/A/AL/ALLENDAY/SVG-Graph-${version}.tar.gz)

build() {
	cd SVG-Graph-$version

	# PERL_MM_USE_DEFAULT=1 \
	perl Makefile.PL
	make OPTIMIZE="$CFLAGS" DESTDIR="$PKG" install

	find "$PKG" -depth \
		-type f \( -name .packlist -o -name \*.bs -o -name perllocal.pod \) -delete , \
		-type f -name autosplit.ix \( -exec grep -q '^[[:space:]]*package' {} \; -o -delete \) , \
		-type d -empty -exec rmdir {} +
}
