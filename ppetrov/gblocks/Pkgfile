# Description: Select blocks of evolutionarily conserved sites
# URL: https://molevol-ibe.csic.es/
# Maintainer: Petar Petrov, slackalaxy at gmail dot com

name=gblocks
version=0.91b
release=1
source=(https://raw.githubusercontent.com/slackalaxy/sources/main/Gblocks_Linux64_${version}.tar.Z)

build() {
	cd Gblocks_${version}
	install -D -m755 Gblocks $PKG/usr/bin/Gblocks

	mkdir -p $PKG/usr/share/$name
	cp -a more_alignments/* $PKG/usr/share/$name
	chmod 0644 $PKG/usr/share/$name/*.pir

	cd $PKG/usr/bin
	ln -s Gblocks $name
}
