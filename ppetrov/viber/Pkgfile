# Description: Viber for PC
# URL: https://viber.com
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: fuse xorg

name=viber
version=27.0.0.1
release=1
source=(https://download.cdn.viber.com/desktop/Linux/viber.AppImage
	$name.sh $name.desktop $name.png)
renames=(viber.AppImage-$version SKIP SKIP SKIP)

build() {
	
	# Install the app image
	install -D -m 0755 $SRC/viber.AppImage-$version $PKG/usr/lib/$name/viber.AppImage

	# Install wrapper
	install -D -m 0755 $SRC/$name.sh $PKG/usr/bin/$name
	
	# Menu entry
	install -D -m 0644 $SRC/$name.desktop $PKG/usr/share/applications/$name.desktop
	install -D -m 0644 $SRC/$name.png $PKG/usr/share/pixmaps/$name.png
}
