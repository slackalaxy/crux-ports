# Description: CRUX logo wallpapers
# URL: https://github.com/slackalaxy/cruxy
# Maintainer: Petar Petrov, slackalaxy at gmail dot com

name=cruxy-wallpapers
version=b8cd643
release=1
source=(https://github.com/slackalaxy/cruxy/archive/$version/cruxy-b8cd643af3ecae96685a88feaf27a56eb6557e85.tar.gz)

build() {
	cd cruxy-${version}*
	mkdir -p $PKG/usr/share/wallpapers
	cp -a *.png $PKG/usr/share/wallpapers
	chmod 0644 $PKG/usr/share/wallpapers/*
}
