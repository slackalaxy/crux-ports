build() {
	mkdir -p $PKG/usr/share/mplayer/skins
	cp -a $SRC/* $PKG/usr/share/mplayer/skins
	
	find $PKG/ -name "*README*" -delete
	find $PKG/ -name "*VERSION*" -delete
	find $PKG/ -type f -exec chmod 644 {} \;

}
