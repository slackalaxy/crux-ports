# Description: An application for notetaking and sketching
# URL: https://sourceforge.net/p/xournal/wiki/Home/
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: gtk libart_lgpl poppler-glib libgnomecanvas xorg-libxdamage

name=xournal
version=0.4.8.2016
release=2
source=(https://downloads.sourceforge.net/$name/$name-$version.tar.gz)

build() {
	cd $name-$version
	
	./configure --prefix=/usr \
	--sysconfdir=/usr/etc

	make
	make install DESTDIR=$PKG
	make desktop-install DESTDIR=$PKG
	
	rm -rf $PKG/usr/share/locale
}
