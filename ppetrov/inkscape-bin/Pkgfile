# Description: An open source SVG editor (AppImage)
# URL: https://inkscape.org/release/all/gnulinux/appimage/
# Maintainer: Petar Petrov, slackalaxy at gmail dot com
# Depends on: fuse xorg

name=inkscape-bin
version=1.4.2
release=1
source=(https://inkscape.org/gallery/item/56343/Inkscape-ebf0e94-x86_64.AppImage
	$name.desktop $name.sh $name.png)

build() {
 	install -D -m 0755 $SRC/Inkscape-ebf0e94-x86_64.AppImage $PKG/usr/lib/$name/Inkscape-ebf0e94-x86_64.AppImage
	install -D -m 0755 $SRC/$name.sh $PKG/usr/bin/$name
	install -D -m 0644 $SRC/$name.desktop $PKG/usr/share/applications/$name.desktop
	install -D -m 0644 $SRC/$name.png $PKG/usr/share/pixmaps/$name.png
}
